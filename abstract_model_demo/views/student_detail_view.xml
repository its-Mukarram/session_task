<odoo>

    <record id="student_detail_form" model="ir.ui.view">
        <field name="name">student.detail.form</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
            <form string="Student Detail Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="address" />
                            <field name="percentage"/>
                            <field name="date_of_birth" />
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="education" />
                            <field name="product_id" widget="selection" />
                            <field name="product_type" widget="radio" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_report" string="Print PDF"
                            type="object" />
                </footer>
            </form>
        </field>
    </record>

    <record id="student_detail_action" model="ir.actions.act_window">
        <field name="name">Student Detail</field>
        <field name="res_model">student.detail</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="student_detail_menu"
              name="Student Detail"
              parent="sale.menu_sale_config"
              action="student_detail_action"
    />

</odoo>
