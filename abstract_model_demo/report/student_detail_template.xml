<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_student_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2>Student Details for <t t-out="school_name"/>
                        </h2>
                        <table style="width:243pt; height:153pt; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:5pt">
                            <tr>
                                <th>Name :
                                </th>
                                <td>
                                    <span t-field="o.name" />
                                </td>
                            </tr>
                            <tr>
                                <th>Mobile :
                                </th>
                                <td>
                                    <span t-field="o.mobile" />
                                </td>
                            </tr>
                            <tr>
                                <th>Address :
                                </th>
                                <td>
                                    <span t-field="o.address" />
                                </td>
                            </tr>
                            <tr>
                                <th>Percentage :
                                </th>
                                <td>
                                    <span t-field="o.percentage" />
                                </td>
                            </tr>
                            <tr>
                                <th>DOB :
                                </th>
                                <td>
                                    <span t-field="o.date_of_birth" />
                                </td>
                            </tr>
                            <tr>
                                <th>Education :
                                </th>
                                <td>
                                    <span t-field="o.education" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    	<record id="action_student_report" model="ir.actions.report">
		<field name="name">Student Report</field>
		<field name="model">student.detail</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">abstract_model_demo.report_student_template</field>
		<field name="report_file">abstract_model_demo.report_student_template</field>
	</record>
</odoo>